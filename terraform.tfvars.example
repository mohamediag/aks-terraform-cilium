# Resource Group Configuration
resource_group_name = "rg-aks-terraform-cilium"
location           = "France Central"

# Project Configuration
project_name = "aks-terraform-cilium"
environment  = "dev"

# AKS Cluster Configuration
cluster_name       = "aks-cluster"
node_count         = 2
vm_size           = "Standard_B2ms"
kubernetes_version = null # Use latest available version

# Network Configuration
vnet_address_space = ["10.0.0.0/16"]

subnet_address_prefixes = {
  aks_subnet      = ["10.0.1.0/24"]
  services_subnet = ["10.0.2.0/24"]
  private_subnet  = ["10.0.3.0/24"]
}

service_cidr   = "10.0.4.0/24"
dns_service_ip = "10.0.4.5"

# Security Configuration
enable_private_cluster = true
authorized_ip_ranges   = [
  # "1.2.3.4/32",  # Your office IP
  # "5.6.7.8/32"   # Another authorized IP
]

# RBAC Configuration
admin_group_object_ids = [
  ac6cfb74-baf7-4a62-8d60-02717a190522
  # Azure AD group object ID for cluster admins
]

# Resource Tags
tags = {
  Environment = "dev"
  Project     = "aks-terraform-cilium"
  ManagedBy   = "terraform"
  Owner       = "devops-team"
  CostCenter  = "engineering"
}